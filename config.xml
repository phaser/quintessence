<build-config>
    <build-target target-name="Default" to-be-built="SDLDemo-osx">
        <platform>linux</platform>
	    <projects-root-dir>projects/</projects-root-dir>
    	<kral-path>KRAL/</kral-path>
        <project-type>Unix Makefiles</project-type>
        <cmake>cmake</cmake>
        <package-dirs>../packages</package-dirs>
        <generate-make-list>1</generate-make-list>
    </build-target>

    <build-target target-name="SDLDemo-osx">
        <platform>osx</platform>
        <project-dir>SDLDemo</project-dir>
        <build-dir>SDLDemo</build-dir>
        <cmake-project-type>Xcode</cmake-project-type>
        <custom-args>
            -Wdev 
            -DRUNTIME_SUFFIX=/Debug 
        </custom-args>
    </build-target>
	
    <build-target target-name="SDLDemo-win32">
        <platform>win32</platform>
        <project-dir>SDLDemo</project-dir>
        <build-dir>SDLDemo</build-dir>
        <cmake-project-type>Visual Studio 11 Win64</cmake-project-type>
        <custom-args>
            -Wdev 
            -DRUNTIME_SUFFIX=/Debug 
        </custom-args>
    </build-target>	
</build-config>

